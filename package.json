{
  "name": "hardhat-project",
  "type": "commonjs",
  "scripts": {
    "test:hardhat":"hardhat test ./test/hardhat/*.test.ts",
    "test:foundry":"forge test",
    "test":"npm run test:hardhat && npm run test:foundry",
    "gen:report":"forge coverage --report lcov",
    "report":"genhtml lcov.info --branch-coverage --function-coverage --output-directory coverage-html && open coverage-html/index.html"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "hardhat": "^2.25.0"
  },
  "dependencies": {
    "@account-abstraction/contracts": "^0.7.0",
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^17.2.0",
    "ethers": "^6.15.0"
  }
}
